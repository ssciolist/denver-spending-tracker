<h1>All transactions</h1>

<table>
  <th>Program</th>
  <th>Vendor</th>
  <th>Amount</th>
  <th>Description</th>
  <th>Transaction Date</th>
  <th>Payment Date</th>
  <% @purchases.each do |purchase| %>
      <tr>
        <td><%= purchase.programs.first.name %></td>
        <td><%= purchase.vendors.first.name %></td>
        <td><%= purchase.amount %></td>
        <td><%= purchase.description %></td>
        <td><%= purchase.transaction_date %></td>
        <td><%= purchase.payment_date %></td>
      </tr>
  <% end %>
</table>
